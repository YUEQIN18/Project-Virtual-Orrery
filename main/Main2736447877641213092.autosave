SolarSystem solarSystem;

PeasyCam cam;

void setup(){
  size(1000,100, P3D );
  cam = new PeasyCam(this,1000);
  //sun.spawn(2,1);
  solarSystem = new SolarSystem();
  solarSystem.set(10);
}

void draw(){
  background(0);
  lights();
  //sun.show();
  //sun.orbit();
  pushMatrix();
  noStroke();
  fill(255);
  for (Body b: SolarSystem.bodies) {
    sphere((float)b.diam/2);
  }
  popMatrix();
 }
